<%= turbo_frame_tag dom_id(tweet) do %>
    <div class="card">
        <p><%= tweet.body %></p>
        <div style="display: flex">
          <div><%= button_to "Like (#{tweet.likes.to_i})", tweet_like_path(tweet) %></div>
          <div><%= button_to "Retweets (#{tweet.retweets.to_i})", tweet_retweet_path(tweet) %></div>
        </div>

        <p><%= link_to 'Show', tweet %> | <%= link_to 'Edit', edit_tweet_path(tweet) %> | <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
<% end %>