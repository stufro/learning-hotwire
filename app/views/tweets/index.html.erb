<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<div class="card">
  <%= render 'form', tweet: Tweet.new %>
</div>

<% @tweets.each do |tweet| %>
  <div class="card">
    <p><%= tweet.body %></p>
    <p>Likes: <%= tweet.likes %> | Retweets: <%= tweet.retweets %></p>

    <p><%= link_to 'Show', tweet %> | <%= link_to 'Edit', edit_tweet_path(tweet) %> | <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: 'primary-button' %>
