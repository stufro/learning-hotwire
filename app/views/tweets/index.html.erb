<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<div class="card" data-controller="hello">
  <input type="text" data-hello-target="input"> 
  <button class="primary-button" data-action="click->hello#greet">Say Hello</button>
  <p data-hello-target="output"></p>

  <%= turbo_frame_tag "tweet_form" do %>
    <%= render 'form', tweet: Tweet.new %>
  <% end %>
</div>

<%= turbo_stream_from 'tweets' %>
<%= turbo_frame_tag 'tweets' do %>
  <%= render @tweets.reverse %>
<% end %>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: 'primary-button' %>
